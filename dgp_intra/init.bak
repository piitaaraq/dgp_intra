from flask import Flask
from config import Config
from .extensions import db, login_manager, mail, celery, migrate
from .models import User
from dotenv import load_dotenv
import sys

def create_app():
    load_dotenv()
    app = Flask(__name__)
    app.config.from_object(Config)
    app.config['broker_url'] = app.config.get('CELERY_BROKER_URL')
    app.config['result_backend'] = app.config.get('CELERY_RESULT_BACKEND')
    
    # Initialize extensions
    db.init_app(app)
    migrate.init_app(app, db)
    login_manager.init_app(app)
    login_manager.login_view = 'auth.login'
    mail.init_app(app)
    
    # Only set up Celery context wrapper if not running Flask CLI
    if not sys.argv[0].endswith('flask'):
        celery.conf.update(app.config)
        
        # Wrap Celery tasks with app context
        class ContextTask(celery.Task):
            def __call__(self, *args, **kwargs):
                with app.app_context():
                    return self.run(*args, **kwargs)
        
        celery.Task = ContextTask
    
    # Register blueprints
    from dgp_intra.routes import register_blueprints
    register_blueprints(app)
    
    # Error handler
    @app.errorhandler(403)
    def forbidden(e):
        return "<h1>403 Forbidden</h1><p>You do not have permission to access this resource.</p>", 403
    
    # User loader
    @login_manager.user_loader
    def load_user(user_id):
        return db.session.query(User).get(user_id)
    
    return app